# .flake8
#
# You can find the configuration details here:
# https://flake8.pycqa.org/en/latest/user/configuration.html
#

[flake8]
max-line-length = 120
max-complexity = 12
count = true
ignore = E203,W503
per-file-ignores =
    __init__.py:F401,F403,E402
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
    .venv

copyright-check = true
copyright-regexp = # Copyright \(c\) kerem.ai\. All Rights Reserved\.